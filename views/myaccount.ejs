<%- include('./partials/header') %>

<div class="flex flex-col min-h-screen px-20 py-10">
    <h2 class="text-2xl font-bold text-cyan-800">My Account</h2>

    <div class="mt-5 bg-gray-100 p-5 rounded-md w-1/2">
        <h3 class="text-lg font-semibold">Profile Information</h3>
        <p><strong>Full Name:</strong> <%= user.fullname %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <% if(user.contact) { %>
            <p><strong>Contact:</strong> <%= user.contact %></p>
        <% } %>
        <% if(user.picture) { %>
            <img src="data:image/jpeg;base64, <%= user.picture.toString('base64') %>" alt="Profile Picture" class="mt-3 w-20 h-20 rounded-full">
        <% } %>
    </div>

    <div class="mt-5">
        <h3 class="text-lg font-semibold">Order History</h3>
        <% if (user.orders.length > 0) { %>
            <ul class="mt-3">
                <% user.orders.forEach(function(order, index) { %>
                    <li class="border-b py-2">
                        <strong>Order #<%= index + 1 %></strong> - <%= order %>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="text-gray-600 mt-3">You haven't placed any orders yet.</p>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %>
