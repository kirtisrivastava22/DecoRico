<%- include('./partials/header') %>

<% if(error && error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex px-20">
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h3 class="text-4xl">Welcome to <span class="text-cyan-400 font-semibold">DecoRico</span></h3>
            <h4 class="text-2xl mb-5">Create Owner Account</h4>
            <form autocomplete="off" action="/owners/create" method="post" enctype="multipart/form-data">
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="text" placeholder="Full Name" name="fullname" required>
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email" required>
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password" required>
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="text" placeholder="GSTIN" name="gstin">
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="file" name="picture">
                <input class="px-5 rounded-full py-3 mt-2 bg-cyan-500 text-white" type="submit" value="Create Owner">
            </form>
        </div>
    </div>
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h4 class="text-2xl capitalize mb-5">Owner Login</h4>
            <form autocomplete="off" action="/owners/ownerlogin" method="post">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email" required>
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password" required>
                <input class="px-5 block rounded-full py-3 mt-2 bg-cyan-500 text-white" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
